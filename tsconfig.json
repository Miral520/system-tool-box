{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": "./src/",
    "types": [
      "webpack-env"
    ],
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "paths": {
    "store": [
      "store/index"
    ],
    "router": [
      "router/index"
    ],
    "cpt/*": [
      "components/*"
    ],
    "scss/*": [
      "scss/*"
    ],
    "utils/*": [
      "utils/*"
    ],
    "entry/*": [
      "entry/*"
    ],
    "views/*": [
      "views/*"
    ],
    "assets/*": [
      "assets/*"
    ],
    "workers/*": [
      "workers/*"
    ],
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.vue",
  ],
  "exclude": [
    "node_modules",
    "dist",
  ]
}
